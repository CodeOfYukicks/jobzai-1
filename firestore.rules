rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    

    // User data
    match /users/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
      
      // Email templates subcollection
      match /emailTemplates/{templateId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // Campaigns subcollection
      match /campaigns/{campaignId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      // Insights subcollection
      match /insights/{insightId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      // User profile data subcollection
      match /profile/{document=**} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }

      // AI Conversations subcollection
      match /aiConversations/{conversationId} {
        allow read, write: if isSignedIn() && isOwner(userId);
        
        match /messages/{messageId} {
          allow read, write: if isSignedIn() && isOwner(userId);
        }
      }

      // Job Applications subcollection
      match /jobApplications/{applicationId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // Analyses subcollection - NOUVEAU
      match /analyses/{analysisId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // CV Rewrites subcollection
      match /cvRewrites/{rewriteId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // Optimized CVs subcollection
      match /optimizedCVs/{cvId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // CVs subcollection (for CV Creator)
      match /cvs/{cvId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // Folders subcollection (for Resume Builder organization)
      match /folders/{folderId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // Documents subcollection (for imported PDFs in Resume Builder)
      match /documents/{documentId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
      
      // Credit History subcollection
      match /creditHistory/{historyId} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }

    // Jobs collection
    match /jobs/{jobId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Matches collection
    match /matches/{matchId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Settings collection (for API keys)
    match /settings/{settingId} {
      allow read: if isSignedIn();
      allow write: if false;
    }

    // Campaign Early Access collection
    match /campaignEarlyAccess/{requestId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if false;
    }
  }
} 